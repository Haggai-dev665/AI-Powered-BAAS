# =================================================================
# AI-Powered BaaS Environment Configuration
# =================================================================

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=AI-Powered-BaaS
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/aibaas
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# MongoDB Configuration
MONGODB_URL=mongodb://admin:password@localhost:27017/aibaas?authSource=admin
MONGODB_DATABASE=aibaas

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redispassword
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@aibaas.dev

# File Storage Configuration
STORAGE_TYPE=local # local, s3, gcs, azure
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aibaas-storage

# MinIO Configuration (local S3 compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=aibaas-files
MINIO_USE_SSL=false

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TIMEOUT=30000
MODEL_CACHE_DIR=./models
MAX_INFERENCE_TIME=60000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_CACHE_DIR=./cache/huggingface

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=aibaas-api
KAFKA_GROUP_ID=aibaas-consumer-group

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091
PROMETHEUS_PATH=/metrics

# Sentry Configuration (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
CSRF_SECRET=your-csrf-secret-change-this-in-production

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/docs
API_VERSION=v1

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=5000

# Background Jobs
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5
QUEUE_ATTEMPTS=3

# Feature Flags
ENABLE_AI_TRAINING=true
ENABLE_CUSTOM_MODELS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_INFERENCE=true

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true
ENABLE_PROFILING=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/aibaas_test
TEST_REDIS_URL=redis://localhost:6379/15

# Production Overrides (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_DEBUG_MODE=false
# ENABLE_HOT_RELOAD=false
# DATABASE_SSL=true
# RATE_LIMIT_MAX_REQUESTS=1000

# Cloud Provider Specific (uncomment as needed)
# =====================================================

# AWS Configuration
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_SQS_QUEUE_URL=your-sqs-queue-url
# AWS_SNS_TOPIC_ARN=your-sns-topic-arn

# Google Cloud Configuration
# GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
# GOOGLE_CLOUD_KEY_FILE=./keys/gcp-service-account.json
# GCS_BUCKET_NAME=your-gcs-bucket

# Azure Configuration
# AZURE_STORAGE_ACCOUNT=your-azure-storage-account
# AZURE_STORAGE_KEY=your-azure-storage-key
# AZURE_CONTAINER_NAME=your-azure-container

# =================================================================
# AI Model Specific Configuration
# =================================================================

# NLP Models
NLP_DEFAULT_MODEL=distilbert-base-uncased
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
SUMMARIZATION_MODEL=facebook/bart-large-cnn
TRANSLATION_MODEL=Helsinki-NLP/opus-mt-en-es

# Computer Vision Models
CV_DEFAULT_MODEL=yolov8n
OBJECT_DETECTION_MODEL=yolov8m
IMAGE_CLASSIFICATION_MODEL=resnet50
FACE_DETECTION_MODEL=mtcnn

# Model Performance Settings
MODEL_BATCH_SIZE=32
MODEL_MAX_LENGTH=512
MODEL_DEVICE=auto  # auto, cpu, cuda
MODEL_PRECISION=fp16  # fp32, fp16

# Model Cache Settings
MODEL_CACHE_SIZE=10GB
MODEL_AUTO_DOWNLOAD=true
MODEL_VERIFICATION=true

# =================================================================
# Performance & Scaling Configuration
# =================================================================

# Server Configuration
SERVER_WORKERS=auto
SERVER_KEEP_ALIVE=2
SERVER_MAX_REQUESTS=1000
SERVER_MAX_REQUESTS_JITTER=50

# Database Connection Pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30

# Cache Configuration
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000
CACHE_STRATEGY=lru  # lru, lfu, fifo

# Background Processing
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
CELERY_WORKER_CONCURRENCY=4

# =================================================================
# Security & Compliance
# =================================================================

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
FIELD_ENCRYPTION_KEY=another-32-character-key-here

# API Security
API_KEY_LENGTH=32
API_KEY_EXPIRY_DAYS=365
MAX_API_KEYS_PER_USER=10

# Data Retention
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90
BACKUP_RETENTION_DAYS=30

# Privacy Settings
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_ANONYMIZATION=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years